<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment2"
    android:orientation="vertical"
    android:background="@drawable/fondo4_2">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toca la imagen de la palabra \n que crees que se estÃ¡ articulando \n"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <VideoView
        android:id="@+id/videoViewF3"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnReproducirF3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Reproducir" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/ivImagen1F3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/cardview_default_radius"
        android:src="@drawable/lapiz" />

    <ImageView
        android:id="@+id/ivImagen2F3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/cardview_default_radius"
        android:src="@drawable/barniz" />

    <ImageView
        android:id="@+id/ivImagen3F3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/cardview_default_radius"
        android:src="@drawable/nariz" />
    </GridLayout>

    <TextView
        android:id="@+id/tvCheckF3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:fabCustomSize="60dp"
        android:clickable="true"
        android:text="Siguiente nivel"
        android:src="@drawable/casa"
        android:scaleType="center"/>

</LinearLayout>